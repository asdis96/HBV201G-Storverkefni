<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"  spacing="10" alignment="CENTER" style="-fx-padding: 10;">
    <Label text="Account Information" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

    <!-- Username -->
    <Label fx:id="usernameLabel" />

    <!-- Email -->
    <Label fx:id="emailLabel" />

    <!-- Name -->
    <Label fx:id="nameLabel" />

    <!-- Button Bar with Close Button -->
    <ButtonBar>
        <Button fx:id="closeButton" text="Close" style="-fx-pref-width: 100px; -fx-text-fill: white; -fx-background-color: #f44336;" />
    </ButtonBar>
</VBox>

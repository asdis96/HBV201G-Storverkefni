<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<!-- new-event.fxml) -->

<HBox prefHeight="606.0" prefWidth="750.0" spacing="17.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hi.event.vidmot.NewEventController">

    <!-- First VBox for form fields (Title, Date, Group, Status, etc.) -->

    <VBox prefHeight="606.0" prefWidth="400.0" spacing="10.0" VBox.vgrow="ALWAYS">
        <HBox alignment="CENTER_LEFT" prefHeight="57.0" prefWidth="390.0" spacing="20.0">
            <children>
                <!-- Title Field -->
                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="26.0" prefWidth="70.0" text="Event Title:" />
                <TextField fx:id="fxTitle" prefHeight="26.0" prefWidth="299.0" promptText="Enter event title" />
            </children>
        </HBox>
        <HBox prefHeight="118.0" prefWidth="390.0" spacing="20.0">
            <children>

                <!-- Event Description TextArea -->
                <Label prefHeight="26.0" prefWidth="70.0" text="Description:" />
                <TextArea fx:id="fxDescription" prefHeight="100.0" prefWidth="300.0" promptText="Enter event description" wrapText="true" />
            </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
        </HBox>
        <HBox prefHeight="65.0" prefWidth="390.0" spacing="20.0">
            <children>

                <!-- Event Date Picker -->
                <Label prefHeight="26.0" prefWidth="70.0" text="Date" />
                <DatePicker fx:id="fxDate" promptText="Select date" />
            </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
        </HBox>
        <HBox prefHeight="65.0" prefWidth="390.0" spacing="20.0">
            <children>

                <!-- Event Time Spinner -->
                <Label prefHeight="26.0" prefWidth="70.0" text="Time" />
                <!-- Hour Spinner -->
                <Spinner fx:id="fxHoursSpinner" prefWidth="100.0" />

                <!-- Label for colon between hour and minute spinners -->
                <Label text=":" />

                <!-- Minute Spinner -->
                <Spinner fx:id="fxMinutesSpinner" prefWidth="100.0" />
            </children>
        </HBox>
        <HBox prefHeight="65.0" prefWidth="390.0" spacing="20.0">
            <children>

                <!-- Event Status ComboBox -->
                <Label prefHeight="26.0" prefWidth="70.0" text="Status" />
                <ComboBox fx:id="fxStatus" prefWidth="130.0" promptText="Select status" />
            </children>
        </HBox>
        <HBox prefHeight="65.0" prefWidth="390.0" spacing="20.0">
            <children>

                <!-- Group ComboBox -->
                <Label prefHeight="26.0" prefWidth="70.0" text="Group" />
                <ComboBox fx:id="fxGroup" prefWidth="130.0" promptText="Select group" />
            </children>
        </HBox>
        <HBox alignment="BOTTOM_CENTER" prefHeight="77.0" prefWidth="390.0" spacing="40.0">
            <children>

                <!-- Save Button -->
                <Button fx:id="fxSaveButton" onAction="#saveEvent" text="Save Event" />
                <Button fx:id="fxCancelButton" onAction="#handleCancel" text="Cancel" />
            </children>
         <VBox.margin>
            <Insets bottom="5.0" />
         </VBox.margin>
        </HBox>
        <padding>
            <Insets left="10.0" top="10.0" />
        </padding>
    </VBox>
    <Separator orientation="VERTICAL" prefHeight="200.0" />

    <!-- Second VBox for media and image selection -->
    <VBox alignment="TOP_CENTER" prefHeight="606.0" prefWidth="295.0" spacing="10.0" VBox.vgrow="ALWAYS">
        <HBox alignment="CENTER" prefHeight="61.0" prefWidth="263.0" spacing="20.0">
            <children>
                <!-- Image Selection -->
                <Label text="Select Image" />
                <Button onAction="#openImage" text="Choose Image" />
            </children>
        </HBox>
        <ImageView fx:id="fxImage" fitHeight="170.0" fitWidth="250.0">
            <VBox.margin>
                <Insets />
            </VBox.margin></ImageView>
        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="263.0" spacing="20.0">
            <children>

                <!-- Media Selection -->
                <Label text="Select Media" />
                <Button onAction="#openMedia" text="Choose Media" />
            </children>
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </HBox>
        <!-- Include media-view.fxml -->
        <fx:include fx:id="mediaView" source="media-view.fxml" />
        <padding>
            <Insets top="10.0" />
        </padding>
    </VBox>
</HBox>

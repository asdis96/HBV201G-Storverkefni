<?xml version="1.0" encoding="UTF-8"?>

<!-- eventmanager-view.fxml -->

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="root" prefHeight="700.0" prefWidth="900.0" stylesheets="@eventmanager.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hi.event.vidmot.EventManagerController">
    <!-- Top section (Menu) -->
    <top>
        <fx:include source="menu-view.fxml" />

    </top>

    <!-- Left section (Sidebar) -->
    <left>
        <VBox fx:id="sidebarContainer" prefWidth="200.0" spacing="10.0" stylesheets="@eventmanager.css">
            <!-- Title or Header if needed -->
            <HBox alignment="CENTER">
                <Label alignment="CENTER" contentDisplay="CENTER" lineSpacing="2.0" prefHeight="29.0" prefWidth="209.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Event Manager">
                    <font>
                        <Font size="16.0" />
                    </font></Label>
                <VBox.margin>
                    <Insets bottom="10.0" top="10.0" />
                </VBox.margin>
            </HBox>

            <!-- Sidebar Buttons -->
            <VBox alignment="CENTER" spacing="30.0" styleClass="sidebarbuttons" stylesheets="@eventmanager.css">
                <Button fx:id="fxNewEvent" onAction="#onNewEvent" prefHeight="40.0" prefWidth="170.0" text="New Event">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button fx:id="fxViewEvent" onAction="#onViewEvent" prefHeight="40.0" prefWidth="170.0" text="View Event">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button fx:id="fxEditEvent" onAction="#onEditEvent" prefHeight="40.0" prefWidth="170.0" text="Edit Event">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button fx:id="fxDeleteEvent" onAction="#onDeleteEvent" prefHeight="40.0" prefWidth="170.0" text="Delete Event">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button fx:id="fxChangeStatus" onAction="#onChangeStatus" prefHeight="40.0" prefWidth="170.0" style="-fx-background-color: transparent;" text="Change Status">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            <padding>
               <Insets top="10.0" />
            </padding>
            </VBox>
         <BorderPane.margin>
            <Insets bottom="20.0" top="10.0" />
         </BorderPane.margin>
        </VBox>
    </left>

    <center>
        <!-- VBox to stack the search bar and table -->
        <VBox spacing="10" style="-fx-padding: 10;">

            <!-- Sort and Search Bar -->
            <HBox alignment="TOP_RIGHT" spacing="10">

                <ComboBox fx:id="sortComboBox" promptText="Sort by Title">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Title A–Z" />
                            <String fx:value="Title Z–A" />
                        </FXCollections>
                    </items>
               <HBox.margin>
                  <Insets right="30.0" />
               </HBox.margin>
                </ComboBox>

                <TextField fx:id="searchField" prefHeight="27.0" prefWidth="260.0" promptText="Search by title" />
            </HBox>

            <!-- TableView -->
            <TableView fx:id="eventTableView" layoutX="20" layoutY="20" prefHeight="619.0" prefWidth="680.0">
                <!-- Table Columns go here -->
                <columns>
                    <TableColumn fx:id="selectColumn" prefWidth="38.0">
                        <cellValueFactory>
                            <PropertyValueFactory property="selected" />
                        </cellValueFactory>
                    </TableColumn>

                    <TableColumn fx:id="titleColumn" prefWidth="236.0" text="Title">
                        <cellValueFactory>
                            <PropertyValueFactory property="title" />
                        </cellValueFactory>
                    </TableColumn>

                    <TableColumn fx:id="dateColumn" prefWidth="105.0" text="Date">
                        <cellValueFactory>
                            <PropertyValueFactory property="date" />
                        </cellValueFactory>
                    </TableColumn>

                    <TableColumn fx:id="groupColumn" prefWidth="111.0" text="Group">
                        <cellValueFactory>
                            <PropertyValueFactory property="group" />
                        </cellValueFactory>
                    </TableColumn>

                    <TableColumn fx:id="statusColumn" prefWidth="68.0" text="Status">
                        <cellValueFactory>
                            <PropertyValueFactory property="status" />
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>

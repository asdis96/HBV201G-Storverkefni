<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>

<!-- Viðmótið fyrir menu-inn -->

<MenuBar xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hi.event.vidmot.MenuController">
    <menus>
        <Menu mnemonicParsing="false" text="Account">
            <items>
                <MenuItem mnemonicParsing="false" onAction="#onAccount" text="View Account" />
                <MenuItem mnemonicParsing="false" text="Account Settings" />
            </items>
        </Menu>
        <Menu mnemonicParsing="false" text="File">
            <items>
                <MenuItem mnemonicParsing="false" onAction="#onExit" text="Exit" />
            </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Display">
            <items>
                <RadioMenuItem fx:id="fxSvartur" mnemonicParsing="false" onAction="#onSetColor" selected="false" text="Svartur">
                    <toggleGroup>
                        <ToggleGroup fx:id="bakgrunnur" />
                    </toggleGroup>
                </RadioMenuItem>
                <RadioMenuItem fx:id="fxHvitur" mnemonicParsing="false" onAction="#onSetColor" selected="true" text="Hvítur" toggleGroup="$bakgrunnur" />
            </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
            <items>
                <MenuItem mnemonicParsing="false" onAction="#onAbout" text="About" />
            </items>
        </Menu>
    </menus>
</MenuBar>
